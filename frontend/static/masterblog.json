{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "localhost:5002",
  "basePath": "/api",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD and search"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Get all posts (with optional sorting)",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "enum": ["title", "content"],
            "default": "title",
            "description": "Field to sort by"
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "asc",
            "description": "Sort direction"
          }
        ],
        "responses": {
          "200": {
            "description": "List of posts"
          },
          "400": {
            "description": "Invalid sort field"
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Post object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/posts/{id}": {
      "put": {
        "summary": "Update a post by ID",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Updated post data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post updated"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Post not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a post by ID",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted"
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Search posts by title or content",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "type": "string",
            "description": "Search term for title"
          },
          {
            "name": "content",
            "in": "query",
            "type": "string",
            "description": "Search term for content"
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching posts"
          }
        }
      }
    }
  }
}
