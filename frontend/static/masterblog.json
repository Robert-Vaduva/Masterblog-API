{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "localhost:5002",
  "basePath": "/api",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD and search"
    }
  ],
  "definitions": {
    "Post": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "date": { "type": "string", "format": "date" }
      },
      "required": ["title", "content", "author"]
    }
  },
  "paths": {
    "/posts": {
      "get": {
        "summary": "Get all posts (with optional sorting)",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "enum": ["title", "content", "author", "date"],
            "default": "title",
            "description": "Field to sort by"
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "asc",
            "description": "Sort direction"
          }
        ],
        "responses": {
          "200": {
            "description": "List of posts",
            "schema": { "type": "array", "items": { "$ref": "#/definitions/Post" } }
          },
          "400": {
            "description": "Invalid sort field"
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Post object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        ],
        "responses": {
          "201": { "description": "Post created", "schema": { "$ref": "#/definitions/Post" } },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/posts/{id}": {
      "put": {
        "summary": "Update a post by ID",
        "tags": ["Post"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" },
          { "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/Post" } }
        ],
        "responses": {
          "200": { "description": "Post updated" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post by ID",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" }
        ],
        "responses": {
          "200": { "description": "Post deleted" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Search posts by title, content, author, or date",
        "tags": ["Post"],
        "produces": ["application/json"],
        "parameters": [
          { "name": "title", "in": "query", "type": "string", "description": "Search term for title" },
          { "name": "content", "in": "query", "type": "string", "description": "Search term for content" },
          { "name": "author", "in": "query", "type": "string", "description": "Search term for author" },
          { "name": "date", "in": "query", "type": "string", "description": "Search term for date (YYYY-MM-DD)" }
        ],
        "responses": {
          "200": {
            "description": "List of matching posts",
            "schema": { "type": "array", "items": { "$ref": "#/definitions/Post" } }
          }
        }
      }
    }
  }
}
